{
	"name": "@standard-config/tsconfig",
	"version": "2.0.0",
	"description": "Strict TypeScript config for modern projects",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/tsconfig.git"
	},
	"keywords": [
		"nodenext",
		"noemit",
		"standard-config",
		"tsconfig",
		"type-stripping",
		"typescript"
	],
	"files": [
		"tsconfig.bundler.json",
		"tsconfig.json"
	],
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": "./tsconfig.json",
		"./bundler": "./tsconfig.bundler.json"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.27.0",
	"peerDependencies": {
		"typescript": ">=5.9"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"devDependencies": {
		"@standard-config/prettier": "^1.0.2",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"format": "prettier --write --ignore-unknown .",
		"format:ci": "prettier --check --ignore-unknown .",
		"prepack": "pnpm run '/^(format:ci|test)$/'",
		"test": "tsc --project ./tests/tsconfig.json --noEmit && tsc --project ./tests/tsconfig.bundler.json --noEmit"
	}
}
