{
	"name": "@standard-config/tsconfig",
	"version": "2.0.1",
	"description": "Strict config for modern TypeScript runtimes",
	"license": "MIT",
	"author": {
		"name": "Dom Porada",
		"email": "dom@dom.engineering",
		"url": "https://dom.engineering"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/standard-config/tsconfig.git"
	},
	"keywords": [
		"nodenext",
		"noemit",
		"standard-config",
		"tsconfig",
		"type-stripping",
		"typescript"
	],
	"files": [
		"tsconfig.bundler.json",
		"tsconfig.json"
	],
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": "./tsconfig.json",
		"./bundler": "./tsconfig.bundler.json"
	},
	"packageManager": "pnpm@10.28.1",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": ">=20",
			"onFail": "warn"
		}
	},
	"peerDependencies": {
		"typescript": ">=5.9"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"devDependencies": {
		"@standard-config/prettier": "1.6.0",
		"husky": "9.1.7",
		"prettier": "3.8.1",
		"typescript": "5.9.3"
	},
	"scripts": {
		"fix": "pnpm format",
		"format": "prettier --write --ignore-unknown .",
		"format:check": "prettier --check --ignore-unknown .",
		"prepack": "pnpm run '/^(format:check|test)$/'",
		"prepare": "husky",
		"test": "pnpm run '/^test:/'",
		"test:tsc:base": "tsc --project tests/tsconfig.json",
		"test:tsc:bundler": "tsc --project tests/tsconfig.bundler.json",
		"test:tsgo:base": "pnpm --silent dlx @typescript/native-preview --project tests/tsconfig.json",
		"test:tsgo:bundler": "pnpm --silent dlx @typescript/native-preview --project tests/tsconfig.bundler.json"
	}
}
